doctype html
html(lang='fr')
	include ../header.jade
body
	.container
		form(action='/plants/#{plant._id}', method='post')
			input(type='hidden', name='_method', value='put')
			.form-group
				label(for="nom") Nom
				input#nom.form-control(value=plant.name, name="name", placeholder="Nom de la plante")
			.form-group
				button.btnbtn-default(type="submit") Modifier
	include ../footer.jade
